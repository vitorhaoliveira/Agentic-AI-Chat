{
  "name": "@agentic-ai-chat/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/express/server.express.ts",
    "prebuild": "npm run build --workspace=@agentic-ai-chat/shared || (cd ../../packages/shared && npm run build)",
    "build": "tsc",
    "vercel-build": "npm run prebuild && npm run build",
    "start": "node dist/express/server.express.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@agentic-ai-chat/shared": "*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.24.1",
    "pdf-parse": "^1.1.1",
    "zod": "^3.22.4",
    "dotenv": "^16.4.1",
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pdf-parse": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.3.1",
    "tsx": "^4.7.0",
    "vitest": "^1.3.1"
  }
}

